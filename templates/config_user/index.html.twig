{% extends 'base.html.twig' %}

{% block title %}Edit User data{% endblock %}

{% block body %}
<div class="body-container">
    <div class="services-container">
        <div class="content-text">
            There you can edit <b>User</b> data.
        </div>
        {% for label, messages in app.flashes(['success']) %}
            {% for message in messages %}
                <div class="flash-container flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        {% for data in userData %}
            {% if form is defined %}
                {{ form_start(form, {'action': path('app_config_user_edit'), 'method': 'POST'}) }}
                    {{ form_label(form.email) }}
                    {{ form_help(form.email) }}
                    {{ form_widget(form.email, {'value':data.email}) }}
                    {{ form_label(form.password.first) }}
                    {{ form_help(form.password.first) }}
                    {{ form_widget(form.password.first) }}
                    {{ form_label(form.password.second) }}
                    {{ form_help(form.password.second) }}
                    {{ form_widget(form.password.second) }}
                    {{ form_row(form.Update) }}
                {{ form_end(form) }}
            {% elseif form is not defined %}
                <div class="content-text">
                    No form is defined there.
                </div>
            {% endif %}
        {% else %}
                <div class="content-text">
                    Not found User data.
                </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
